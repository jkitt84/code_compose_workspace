#include <msp430.h> 
//learning stuff while reading the book
//jpk
#define LED1	BIT0
#define B1		BIT3

/*
 * main.c
 */
void main(void) {
    WDTCTL = WDTPW | WDTHOLD;	// Stop watchdog timer
    P1OUT = 0x00;
    P1DIR = LED1;

    for (; ;){
    	if (( P1IN & B1) != 0){
    		P1OUT &= ~LED1;
    	} else {
    		P1OUT |= LED1;
    	}
    }




	P2DIR = 0x03;
	P2OUT = 0x03;
	while(1){}
}
