/*
 * listing4point16.c
toggle LEDs by polling timerA
timerA is SMCLK divided by 8, continuous mode
 */

#include <msp430.h>
#include  <msp430g2452.h>

#define LED1	BIT0
#define LED2	BIT1

void main(void){
	WDTCTRL = WDTPW|WDTHOLD;
	P1OUT = LED1;
	P1DIR = LED1|LED2;
	TACTL = MC_2|ID_3|TASSEL_2|TACLR; //Timer A, ModeControl=2,InputDivider=3,TimerA_SourceSelect=2(SMCLK),TimerA_clear(start timer A)
	for( ; ; ){
		while (TACTL_bit.TAIFG == 0){//do nothing while the TimerA_ControlBit, TimerA_Interupt_Flag is not set
		}
		TACTL_bit.TAIFG = 0;//clear the overflow flag
		P1OUT ^=LED1|LED2;
	}

}
